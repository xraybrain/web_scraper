<div class="container-fluid py-5">
  <div class="row">
    <div class="col-11 col-sm-10 col-md-9 col-lg-8 col-xl-6 mx-auto">
      <!-- Movie Searcher -->
      <form action="" method="POST" id="web-scraper-form">
        <div class="form-group input-group">
          <input type="search" name="url" class="form-control" placeholder="website address:" autocomplete="off"
            id="url" />
          <span class="input-group-append">
            <button class="input-group-text text-uppercase font-weight-bold bg-warning">
              scrape
              <i class="fas fa-spider ml-1"></i>
            </button>
          </span>
        </div>
      </form>
      <!-- End of Movie searcher -->
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h5>Scrape Result:</h5>
      <div class="card shadow" style="position: relative;" id="result">
        <div class="card-body">

          <div id="wrapper"></div>
          <div id="image-box">

          </div>




          <div class="chart-box py-5">
            <div id="wordCount">

            </div>


            <canvas id="myChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<script type="mustache/template" id="image-slider-template">
  <div id="demo" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  {{!-- <ul class="carousel-indicators">
    <li data-target="#demo" data-slide-to="0" class="active"></li>
