    <li data-target="#demo" data-slide-to="2"></li>
  </ul> --}}

  <!-- The slideshow -->
  <div class="carousel-inner">
    \{{#imageResults}}
    <div class="carousel-item \{{state}} text-center" >
      <img src="\{{src}}" alt="web image" style="width: 300px; height: 250px;">
    </div>
    \{{/imageResults}}
  </div>

  <!-- Left and right controls -->
  <a class="carousel-control-prev bg-dark" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next bg-dark" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>

  </div>
</script>

<script type="mustache/template" id="word-count-template">
  <h5><u>Top 10 occuring words:</u></h5>
  <h3>Total Words: \{{totalWords}}</h3>
</script>

<script type="mustache/template" id="loading-template">
<div class="loading">
  <img src="/img/loading.gif" alt="loading anime">
</div>
</script>

